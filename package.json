{
  "name": "@bszhct/bs-action-sync",
  "version": "1.0.2",
  "description": "一个跨终端交互同步的玩具",
  "scripts": {
    "dev": "concurrently 'tsc --watch' 'rollup -c rollup.config.js -w'",
    "build": "concurrently 'tsc' 'rollup -c rollup.config.js'",
    "start": "node ./bin/bs-action-sync start",
    "eslint": "eslint . --ext .ts,.tsx",
    "es:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run eslint",
      "git add"
    ]
  },
  "bin": {
    "bs-action-sync": "bin/bs-action-sync"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "license": "ISC",
  "author": "bszhct",
  "dependencies": {
    "@bszhct/template-base": "0.0.2",
    "caporal": "1.3.0",
    "chalk": "3.0.0",
    "http-proxy": "1.18.0",
    "socket.io": "2.3.0",
    "update-notifier": "3.0.1"
  },
  "files": [
    "bin",
    "lib"
  ],
  "eslintIgnore": [
    "bin",
    "lib"
  ],
  "devDependencies": {
    "@babel/core": "7.8.0",
    "@babel/preset-env": "7.8.0",
    "concurrently": "5.0.2",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-uglify": "6.0.4"
  }
}
